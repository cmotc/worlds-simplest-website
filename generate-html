#! /usr/bin/env sh

MARKDOWN_FILES=$(find . -type f -iname "*.MD" | sort)

if [ -f README.md ]; then
        generate-header README.md
        echo "<body>"
fi


for md_file in $MARKDOWN_FILES; do
        if [ ! -f README.md ]; then
                generate-header $md_file
                echo "<body>"
        fi
        echo "<div id=\"content\">"
        markdown $md_file
        echo "</div>"
        if [ ! -f README.md ]; then
                echo "</body>"
        fi
done

if [ -f README.md ]; then
        echo "</body>"
fi
